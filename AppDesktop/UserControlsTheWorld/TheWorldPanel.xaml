<UserControl x:Class="AppDesktop.UserControlsTheWorld.TheWorldPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesktop.UserControlsTheWorld"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Margin="10" CornerRadius="10" Background="LightSeaGreen"></Border>
        <StackPanel Margin="10" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="buscadorBtn" VerticalAlignment="Center" Background="DarkSeaGreen" Click="buscadorBtn_Click">Buscador</Button>

            <TextBox x:Name="buscadorTxtB" Margin="10,0,0,0" Width="350"></TextBox>
        </StackPanel>
        <StackPanel x:Name="exercisesSearchedStck" Grid.Row="1"></StackPanel>
            
    </Grid>
</UserControl>
