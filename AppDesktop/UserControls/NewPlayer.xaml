<UserControl x:Class="AppDesktop.UserControls.NewPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesktop.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label>Introducir un jugador nuevo</Label>
            <Label>Nombre:</Label>
            <TextBox x:Name="nameTxt"></TextBox>
            <Label>Altura</Label>
            <TextBox x:Name="heightTxt"></TextBox>
            <Label>Peso</Label>
            <TextBox x:Name="weightTxt"></TextBox>
            <Label>Equipo</Label>
            <ComboBox x:Name="comboBoxTeams"></ComboBox>
            <Button x:Name="saveBtn" Click="saveBtn_Click">Guardar</Button>
        </StackPanel>
        
            
    </Grid>
</UserControl>
