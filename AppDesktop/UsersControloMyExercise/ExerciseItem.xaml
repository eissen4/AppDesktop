<UserControl x:Class="AppDesktop.UsersControloMyExercise.ExerciseItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppDesktop.UsersControloMyExercise"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <Grid>
        <Border Margin="10" Background="LightSeaGreen" CornerRadius="10">
            <StackPanel >
                <StackPanel Orientation="Horizontal" >
                    <Label x:Name="titleLbl">Título:</Label>
                    <Label x:Name="valueLbl" HorizontalAlignment="Right">Valoración:</Label>
                </StackPanel>
                <Label x:Name="userLbl"></Label>
                <Label x:Name="descriptionLbl">Descripción:</Label>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
